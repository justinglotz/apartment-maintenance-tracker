# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
# For Docker: use 'postgres' as hostname
# For local dev: use 'localhost'
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/apartment_tracker

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:3000

# JWT Secret
# IMPORTANT: Generate a strong random secret for production!
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_change_in_production

# AWS S3 Configuration
# IMPORTANT: Never commit real AWS credentials!
# Create an IAM user with S3-only permissions for this application
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
S3_BUCKET_NAME=your-s3-bucket-name-here